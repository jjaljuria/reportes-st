<main class="container mt-3">
    <div class="row">
        <form id="formSupporter" class="col-8 mx-auto bg-light p-3 rounded needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" name="name" class="form-control" required>
                <div class="invalid-feedback">Necesita llenar este campo</div>
            </div>
            
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>

    <section class="mt-3">
        <ul class="list-group" id="listRequest">
            {{#each supporters as |supporter|}}
                <li class="list-group-item d-flex justify-content-between align-items-center" >
                    {{supporter.name}}
                    <button class="btn btn-danger" onclick="deleteSupporter({{supporter.id}})">Eliminar</button>
                </li>
            {{/each}}
        </ul>
    </section>
</main>

{{#content "scripts" mode="append"}}
    <script src="/js/supporter.js"></script>
{{/content}}