{{#content "header"}}
    <link rel="stylesheet" href="/toastify/toastify.css">
{{/content}}

<main class="container mt-3">
    <h1 class="text-center">Solicitud de Soporte Técnico</h1>
    <div class="row">
        <form id="formRequest" class="col-8 mx-auto bg-light p-3 rounded">
            <div class="mb-3">
                <label class="form-label">Oficina</label>
                <input type="text" name="oficina" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Coordinación</label>
                <input type="text" name="coordinacion" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input type="text" name="usuario" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Solicitado por</label>
                <input type="text" name="solicitado" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción de la solicitud</label>
                <textarea type="text" name="descripcion" class="form-control" rows="5"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</main>

{{#content "scripts" mode="append"}}
    <script src="/socket.io/socket.io.js"></script>
    <script src="/toastify/toastify.js"></script>
    <script src="/js/solicitud.js"></script>
{{/content}}